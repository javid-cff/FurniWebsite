@model Product

@{
    ViewData["Title"] = "Create Product";
}

<div style="max-width:900px;margin:40px auto;padding:25px;background:#ffffff;border-radius:10px;box-shadow:0 0 15px rgba(0,0,0,0.1);">
    <h2 style="text-align:center;margin-bottom:25px;color:#333;">Create Product</h2>

    <div class="row">
        <form asp-action="Create" method="post" style="width:100%;">

            <!-- Name -->
            <div style="margin-bottom:15px;">
                <label asp-for="Name" style="display:block;font-weight:600;margin-bottom:5px;">Name</label>
                <input asp-for="Name"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Price -->
            <div style="margin-bottom:15px;">
                <label asp-for="Price" style="display:block;font-weight:600;margin-bottom:5px;">Price</label>
                <input asp-for="Price" type="number" step="0.01"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Image Name -->
            <div style="margin-bottom:15px;">
                <label asp-for="ImageName" style="display:block;font-weight:600;margin-bottom:5px;">Image Name</label>
                <input asp-for="ImageName"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Image Url -->
            <div style="margin-bottom:15px;">
                <label asp-for="imageUrl" style="display:block;font-weight:600;margin-bottom:5px;">Image URL</label>
                <input asp-for="imageUrl"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Created Time -->
            <div style="margin-bottom:15px;">
                <label asp-for="CreatedTime" style="display:block;font-weight:600;margin-bottom:5px;">Created Time</label>
                <input asp-for="CreatedTime" type="datetime-local"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Updated Time -->
            <div style="margin-bottom:15px;">
                <label asp-for="UpdatedTime" style="display:block;font-weight:600;margin-bottom:5px;">Updated Time</label>
                <input asp-for="UpdatedTime" type="datetime-local"
                       style="width:100%;padding:10px;border:1px solid #ccc;border-radius:6px;" />
            </div>

            <!-- Is Deleted -->
            <div style="margin-bottom:20px;display:flex;align-items:center;">
                <input asp-for="IsDeleted" type="checkbox" style="margin-right:8px;" />
                <label asp-for="IsDeleted" style="font-weight:600;">IsOnline</label>
            </div>

            <!-- Buttons -->
            <div style="text-align:center;">
                <button type="submit"
                        style="background:#28a745;color:#fff;padding:10px 25px;border:none;border-radius:6px;font-size:16px;cursor:pointer;">
                    Save
                </button>

                <a asp-action="Index"
                   style="margin-left:10px;text-decoration:none;background:#6c757d;color:#fff;padding:10px 25px;border-radius:6px;">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>
