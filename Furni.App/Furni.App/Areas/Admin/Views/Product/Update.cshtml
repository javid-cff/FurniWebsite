@model Product

<div class="container">
    <div class="row">
        <form asp-controller="Product" asp-action="Update">
            <input type="hidden" name="id" value="{{id}}">

            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input type="text" class="form-control" name="name"
                       value="{{name}}" placeholder="Ad daxil et">
            </div>

            <div class="mb-3">
                <label class="form-label">Açıqlama</label>
                <textarea class="form-control" name="description" rows="3"
                          placeholder="Açıqlama daxil et">{{description}}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Status</label>
                <select class="form-select" name="status">
                    <option value="1">Aktiv</option>
                    <option value="0">Passiv</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/index" class="btn btn-outline-secondary">
                    ⬅ Geri
                </a>

                <button type="submit" class="btn btn-success">
                    💾 Yenilə
                </button>
            </div>
        </form>
    </div>
</div>


